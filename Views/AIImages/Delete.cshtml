@model UC_Web_Assessment.Models.AIImage

@{
    ViewData["Title"] = "Delete AI Image";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <h1 class="text-danger mb-4">Delete Image</h1>

            <h3 class="mb-4">Are you absolutely sure you want to delete this image?</h3>
            
            <div class="alert alert-danger" role="alert">
                <strong>Warning:</strong> This action is irreversible. The file will be permanently removed from the server.
            </div>
            
            <hr />

            <div class="card shadow-sm mb-4">
                <img src="@Model.ImagePath" class="card-img-top" alt="@Model.Title" style="max-height: 250px; object-fit: cover;">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Title)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Description)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg me-2">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
            </form>
        </div>
    </div>
</div>