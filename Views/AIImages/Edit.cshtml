@model UC_Web_Assessment.Models.AIImage

@{
    ViewData["Title"] = "Edit AI Image";
}

<div class="container py-5">
    <h1 class="mb-4">Edit Image</h1>
    <h4 class="text-secondary">@Model.Title</h4>
    <hr />
    
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatorId" />

                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-4">
                    <label asp-for="ImagePath" class="form-label">Current Image URL</label>
                    <input asp-for="ImageFile" type="file" class="form-control" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                    <small class="form-text text-muted">Current Path: @Model.ImagePath</small>
                </div>

                <div class="d-grid gap-2">
                    <input type="submit" value="Save Changes" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index">Back to Image Gallery</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}