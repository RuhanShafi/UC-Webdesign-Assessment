<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/aiimages.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    </head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3 full-width-nav">
            <div class="container-fluid full-width-content">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AI in Healthcare</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AIImages" asp-action="Index">Articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Creative">Insights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" /> </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted full-width-footer">
        <div class="container-fluid full-width-content text-center py-3">
            &copy; 2025 - AI in Healthcare | Ruhan Shafi
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a> |
            <a asp-area="" asp-controller="AIImages" asp-action="Index">AI Images</a> |
            <a asp-area="" asp-controller="Home" asp-action="Creative">Insights</a> |
            <a asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>